# ---- Server ----
ENV=dev
LOG_LEVEL=INFO
HOST=0.0.0.0
ASR_PORT=5001
TTS_PORT=5002
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---- Debugpy (optional) ----
DEBUGPY_ENABLE=true
DEBUGPY_HOST=0.0.0.0
DEBUGPY_PORT=5678
DEBUGPY_WAIT_FOR_CLIENT=false

# ---- ASR ----
ASR_ENGINE=whisper  # fasterwhisper|whisper
ASR_DEVICE=mps           # cpu|cuda|auto|mps
ASR_MODEL=medium          # faster-whisper model size or local path
ASR_CPU_THREADS=10
ASR_NUM_OF_WORKERS=1
ASR_COMPUTE_TYPE=int8 # int8|int8_float16|float16|float32
ASR_CACHE_ENABLED=true
ASR_CACHE_MAX_ITEMS=32
ASR_TRANSCRIBE_BEAM_SIZE=5
ASR_TRANSCRIBE_TEMPERATURE=0
ASR_TRANSCRIBE_BEST_OF=1
ASR_VAD_ENABLED=true
ASR_VAD_THRESHOLD=0.5

# ---- TTS ----
TTS_DEVICE=cuda
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_VOICES_DIR=voices
TTS_SAMPLE_RATE=24000
TTS_MAX_CHARS=180
TTS_MIN_CHARS=70
TTS_RETRY_STEPS=2
TTS_DEFAULT_LANG=en
TTS_AUTO_LANG=true
TTS_LANG_HINT=
TTS_FORCE_LANG=
