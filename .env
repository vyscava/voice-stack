# ---- Server ----
ENV=dev
LOG_LEVEL=INFO
HOST=0.0.0.0
ASR_PORT=5001
TTS_PORT=5002
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---- Debugpy (optional) ----
DEBUGPY_ENABLE=true
DEBUGPY_HOST=0.0.0.0
DEBUGPY_PORT=5678
DEBUGPY_WAIT_FOR_CLIENT=false

# ---- ASR ----
ASR_DEVICE=cpu         # cpu|cuda|auto
ASR_MODEL=base         # faster-whisper model size or local path
ASR_COMPUTE_TYPE=int8  # int8|int8_float16|float16|float32
ASR_CACHE_DIR=         # optional, e.g. /data/cache/asr
ASR_VAD_ENABLED=true
ASR_VAD_THRESHOLD=0.5
ASR_CHUNK_SEC=30
ASR_LANG=
ASR_TASK=transcribe    # or translate

# ---- TTS ----
TTS_DEVICE=cuda
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_VOICES_DIR=voices
TTS_SAMPLE_RATE=24000
TTS_MAX_CHARS=180
TTS_MIN_CHARS=70
TTS_RETRY_STEPS=2
TTS_DEFAULT_LANG=en
TTS_AUTO_LANG=true
TTS_LANG_HINT=
TTS_FORCE_LANG=
